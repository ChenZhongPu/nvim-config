{
  "ctest": {
    "prefix": "ctestmakefile",
    "body": [
      "UNAME := $(shell uname)",
      "ifeq ($(UNAME), Darwin)",
      "\ttest_options := -I/opt/homebrew/include -L/opt/homebrew/lib",
      "endif",
      "test: test.c",
      "\tclang -o test test.c ${0} -Wall $(test_options) -lcriterion"
    ],
    "description": "Creates makefile item for UnitTest using Criterion"
  }
}
